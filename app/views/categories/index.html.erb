<div class="container">

  <h1>Categorías</h1>
  <div class="">
    <% if can?(:create, @category) %>
      <%= link_to 'Nueva categoría', new_category_path %>
    <% end %>
  </div>

  <div class="card-deck">
    <% @categories.each do |category| %>
      <div class="card">
        <img class="card-img-top" src="<%= asset_path(category.photo) %>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= category.name %></h5>
          <%= link_to 'Ver todos los productos', category, class: 'btn btn-outline-secondary btn-lg' %>
          <br><br>
          <div class="row">
            <% if can?(:edit, category) %>
              <p><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-secondary btn-sm boton-edit' %></p>
            <% end %>
            <% if can?(:destroy, category) %>
              <%= link_to 'Destroy', category, class: 'btn btn-danger btn-sm boton-delete', method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
