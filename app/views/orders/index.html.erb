<div class="container">
<table class="table">
  <h1>Carrito de compra </h1>
  <thead>
    <th>Producto</th>
    <th>Descripci√≥n</th>
    <th>Precio</th>
  </thead>
  <% @orders.each do |order| %>
    <tr>
      <td><%= image_tag order.product.photo.thumb%></td>
      <td> <%= order.product.name %> </td>
      <td>  <%= number_to_currency(order.product.price, precision: 0, delimiter: ".") %></td>
    </tr>
  <% end %>
  <tr>
    <td colspan="2">Total a pagar</td>
    <td> <%= number_to_currency(@orders.map{|order|  order.product.price}.sum, precision: 0, delimiter: ".") %> </td>
  </tr>
</table>
</div>
